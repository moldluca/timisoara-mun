# Configurare pentru producție pe Hostico
# Copiază aceste setări în cPanel > Environment Variables sau în .env

# Cheie secretă pentru sesiuni (SCHIMBĂ OBLIGATORIU!)
SECRET_KEY=your-very-secret-key-change-this-in-production

# Configurare email (Gmail ca exemplu)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USE_SSL=False
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Baza de date (SQLite pentru simplitate)
DATABASE_URL=sqlite:///instance/tm_mun.db

# Setări Flask pentru producție
FLASK_ENV=production
FLASK_DEBUG=False